@model FolderViewModel

<div class="modal fade" id="moveModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="moveTitle">Move folder</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="Home/Move" http-method="post">
                    <span>Move '@(Model.Name)'?</span>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <select id="ddlFolders" asp-for="Id" class="form-control" asp-items="@ViewBag.folders"></select>
                        <div asp-validation-for="Name" class="text-danger"></div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-warning" data-save="modal">Move</button>
            </div>
        </div>
    </div>
</div>

