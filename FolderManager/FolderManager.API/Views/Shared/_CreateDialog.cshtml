@model FolderCreateModel

<div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createTitle">Create a new folder</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="Folder/Add?parentId=@ViewBag.ParentId" http-method="post" name="creating">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Name</label>
                        <input type="text" asp-for="Name" class="form-control" name="name" id="name" />
                    </div>
                    <button type="submit" class="btn btn-success" data-save="modal">Create</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
